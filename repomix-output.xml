/* Grid and dot background utilities */
@layer utilities {
	.bg-grid {
		position: relative;
		overflow: hidden;
	}

	.bg-grid::before {
		content: '';
		position: absolute;
		inset: 0;
		background-image:
			linear-gradient(rgba(0, 0, 0, 0.06) 1px, transparent 1px),
			linear-gradient(90deg, rgba(0, 0, 0, 0.06) 1px, transparent 1px);
		background-size: 40px 40px;
		background-position:
			0 0,
			0 0;
		pointer-events: none;
		-webkit-mask-image: radial-gradient(
			ellipse at center,
			rgba(0, 0, 0, 1) 60%,
			rgba(0, 0, 0, 0) 100%
		);
		mask-image: radial-gradient(ellipse at center, rgba(0, 0, 0, 1) 10%, rgba(0, 0, 0, 0) 100%);
	}
	/* grid fallback for browsers without mask support */
	.bg-grid-fallback {
		background-image:
			linear-gradient(rgba(0, 0, 0, 0.06) 1px, transparent 1px),
			linear-gradient(90deg, rgba(0, 0, 0, 0.06) 1px, transparent 1px);
		background-size: 40px 40px;
		background-position:
			0 0,
			0 0;
	}

	.bg-grid {
		/* empty - uses ::before for masked grid */
	}

	.bg-dots {
		background-image: radial-gradient(currentColor 1px, transparent 1px);
		background-size: 20px 20px;
		color: rgba(0, 0, 0, 0.06);
	}

